<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
    integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous" />
  <title>Document</title>
</head>

<body>
  <div class="p-3 mb-2 bg-success text-white ">
    <h1>Registration Here</h1>
    <% if(errors.length!=0){ %>
      <h3>Please Make Sure That-</h3>
      <ul>
        <% errors.forEach(element=> { %>
          <li>
            <%= element %>
          </li>
          <% }) %>
      </ul>
      <% } %>
        <br />
        <form id="reg" class="reg" method="post" action="/signup" enctype="multipart/form-data">
          <div class="form-group">
            <label for="first_name">First_name</label>
            <input class="form-control" type="text" name="first_name" id="first_name" placeholder="Nazmus Sakib"
              required /><br />
            <label for="last_name">Last_name</label>
            <input class="form-control" type="text" name="last_name" id="last_name" placeholder="Sami" required /><br />
            <label for="exampleInputEmail1">Email address</label>
            <input name="Remail" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
              placeholder="example@gmail.com" required />
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
              else.</small><br />
          </div>
          <label for="">Phone Number</label>
          <input name="Rnum" class="form-control" type="tel" id="Number" placeholder="+88017.." required /><br />
          <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input name="Rpass" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password"
              required /><br />
          </div>
          <div class="form-group">
            <label for="DOB">Date Of Birth</label>
            <input name="DOB" type="date" class="form-control" id="DOB" placeholder="2000-01-01" required />
            <br />
          </div>
          <br />
          <p>If you are a seller then select seller</p>
          <div class="form-check">
            <input class="form-check-input radio-example" type="radio" name="user_class" id="exampleRadios1"
              value="buyer" checked />
            <label class="form-check-label" for="exampleRadios1"> Buyer </label>
          </div>
          <div class="form-check">
            <input class="form-check-input radio-example" type="radio" name="user_class" id="exampleRadios2"
              value="seller" />
            <label class="form-check-label" for="exampleRadios2"> Seller </label>
          </div>
          <br />
          <div class="visually-hidden" id="Bio">
            <!-- input textbox -->
            <label for="bio">Tell Us A Little About Yourself</label><br><br>
            <textarea class="rounded" name="bio" id="biodata" rows="3" cols="200" maxlength="1000"
              placeholder="I am a......."></textarea><br><br>
          </div>
          <div class="mb-3">
            <label for="formFile" class="form-label">Give your picture</label>
            <input class="form-control" type="file" id="formFile" name="picture" required />
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
  </div>
  <!-- jquery file link  -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
    crossorigin="anonymous"></script>


  <!-- custom js file link  -->

  <script src="/js/main.js"></script>
</body>

</html>